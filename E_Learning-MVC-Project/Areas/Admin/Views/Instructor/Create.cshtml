@model InstructorCreateVM

<div class="container mt-5">
    <h2>Create New Instructor</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Designation" class="control-label"></label>
            <input asp-for="Designation" class="form-control" />
            <span asp-validation-for="Designation" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Images" class="control-label"></label>
            <input asp-for="Images" type="file" multiple class="form-control" />
            <span asp-validation-for="Images" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Socials</label>
            <div id="socials-container">
                <div class="form-group">
                    <input type="text" name="Socials[0].Name" placeholder="Social Name" class="form-control" />
                    <input type="text" name="Socials[0].Url" placeholder="Social URL" class="form-control" />
                </div>
            </div>
            <button type="button" id="add-social" class="btn btn-secondary">Add Social</button>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>



