@model SliderEditVM

<h2>Edit Slider</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    
    <div class="form-group">
        <img src="~/img/@Model.Image" alt="Slider Image" class="img-thumbnail" />
    </div>
    <div class="form-group">
        <label asp-for="NewImage" class="control-label"></label>
        <input asp-for="NewImage" class="form-control" type="file" />
        <span asp-validation-for="NewImage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a class="btn btn-light" asp-action="Index">Cancel</a>
    </div>
</form>


